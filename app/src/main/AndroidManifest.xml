<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kyle.huemongous">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity"
            android:label="My Palettes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewPalette"
            android:label="New Palette"
            android:parentActivityName=".NewPalette" />
        <activity
            android:name=".MixingActivity"
            android:label="Mixing Recipe"
            android:parentActivityName=".MixingActivity" />
        <activity
            android:name=".ColorPickerActivity"
            android:label="Color Mixer"
            android:parentActivityName=".ColorPickerActivity" />
        <activity
            android:name=".ViewRecipesActivity"
            android:label="Recipes"
            android:parentActivityName=".ViewRecipesActivity" />
    </application>

</manifest>